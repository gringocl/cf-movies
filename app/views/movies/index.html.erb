<h1>List of Movies</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>genre</th>
      <th>year</th>
      <th>votes</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.year %></td>
        <td><%= movie.votes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Back Home!", root_path %>